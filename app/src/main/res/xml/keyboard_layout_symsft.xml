<?xml version="1.0" encoding="utf-8"?>
<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:keyWidth="10%p"
    android:verticalGap="2dp"
    android:keyHeight="48dp" >

    <Row android:rowEdgeFlags="top">
        <Key android:keyLabel="~" android:keyEdgeFlags="left"/>
        <Key android:keyLabel="`"/>
        <Key android:keyLabel="|"/>
        <Key android:keyLabel="•"/>
        <Key android:keyLabel="√"/>
        <Key android:keyLabel="π"/>
        <Key android:keyLabel="÷"/>
        <Key android:keyLabel="×"/>
        <Key android:keyLabel="{"/>
        <Key android:keyLabel="}" android:keyEdgeFlags="right"/>
    </Row>

    <Row>
        <Key android:keyLabel="¥" android:keyEdgeFlags="left"/>
        <Key android:keyLabel="£"/>
        <Key android:keyLabel="¢"/>
        <Key android:keyLabel="€"/>
        <Key android:keyLabel="°"/>
        <Key android:keyLabel="^"/>
        <Key android:keyLabel="_"/>
        <Key android:keyLabel="="/>
        <Key android:keyLabel="["/>
        <Key android:keyLabel="]" android:keyEdgeFlags="right"/>
    </Row>

    <Row>
        <Key android:codes="-6" android:keyLabel="alt"
            android:isModifier="true" android:keyEdgeFlags="left"
            android:keyWidth="15%p"/>
        <Key android:keyWidth="10%p" android:keyLabel="™"/>
        <Key android:keyWidth="10%p" android:keyLabel="®"/>
        <Key android:keyWidth="10%p" android:keyLabel="©"/>
        <Key android:keyWidth="10%p" android:keyLabel="¶"/>
        <Key android:keyWidth="10%p" android:keyLabel="\\"/>
        <Key android:keyWidth="10%p" android:keyLabel="&lt;"/>
        <Key android:keyWidth="10%p" android:keyLabel="&gt;"/>
        <Key android:codes="-5"
            android:keyEdgeFlags="right"
            android:keyIcon="@drawable/sym_keyboard_delete"
            android:horizontalGap="3%p"
            android:keyWidth="10%p"
            android:isRepeatable="true"/>
            />
    </Row>

    <Row android:rowEdgeFlags="bottom">
        <Key android:codes="-2" android:keyLabel="ABC" android:horizontalGap="3%p" android:keyWidth="10%p" android:keyEdgeFlags="left"/>
        <Key android:keyLabel="," android:keyWidth="10%p" android:horizontalGap="1%p"/>
        <Key android:keyLabel="-" android:keyWidth="10%p"/>
        <Key android:codes="32" android:keyIcon="@drawable/sym_keyboard_space2"
            android:keyWidth="30%p" android:horizontalGap="1%p"/>
        <Key android:keyLabel="=" android:keyWidth="10%p"/>
        <Key android:keyLabel="." android:keyWidth="10%p"/>
        <Key android:codes="10" android:keyLabel="OK" android:keyWidth="10%p"
            android:horizontalGap="1.5%p" android:keyEdgeFlags="right"/>
    </Row>
</Keyboard>